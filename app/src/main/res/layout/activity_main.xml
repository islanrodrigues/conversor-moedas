<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valor_em_real"
        android:layout_gravity="center"
        android:textSize="26sp"
        android:textColor="@color/colorText"/>


    <EditText
        android:id="@+id/edit_value"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:hint="@string/valor"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:inputType="numberSigned"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/valor_em_dolar"
        android:textSize="16sp"
        android:textColor="@color/colorText"/>

    <TextView
        android:id="@+id/text_dolar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="conversão pra dolar aqui"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/valor_em_euro"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/colorText"/>

    <TextView
        android:id="@+id/text_euro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="conversão pra euro aqui"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"/>
    
    <Button
        android:id="@+id/button_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="@string/calcular"
        android:layout_marginTop="45dp"
        android:textSize="16sp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorText"/>

    <TextView
        android:id="@+id/text_message_error"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorMessage" />


</LinearLayout>